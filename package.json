{
  "name": "ts-express-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript Express Boilerplate",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.mjs",
    "dev": "tsup src/index.ts --watch --onSuccess 'node dist/index.mjs'",
    "build": "tsup src/index.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "jest"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "cjs",
      "esm"
    ],
    "target": "es2020",
    "splitting": false,
    "sourcemap": true,
    "minify": true,
    "clean": true
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "exports": {
    "default": "./dist/index.js",
    "require": "./dist/index.cjs",
    "import": "./dist/index.js",
    "node": "./dist/index.cjs"
  },
  "keywords": [
    "backend",
    "nodeJS",
    "typescript",
    "express"
  ],
  "author": "Kaung Min Htet",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "9.x",
    "globals": "^15.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0"
  }
}
